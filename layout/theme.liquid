<!doctype html>
<html lang="{{ request.locale.iso_code | default: 'en' }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }}{% if current_tags %} â€“ {{ current_tags | join: ', ' }}{% endif %}</title>
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    >
    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}
    {{ 'base.css' | asset_url | stylesheet_tag }}
    {%- if settings.accent_color != blank -%}
      <style>
        :root {
          --color-burgundy: {{ settings.accent_color }};
        }
      </style>
    {%- endif -%}
    {{ content_for_header }}
  </head>
  <body class="template-{{ template.name | handle }}">
    <a class="skip-to-content-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>
    {% section 'rzst-header' %}
    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>
    {% section 'rzst-footer' %}
    {{ content_for_footer }}
  </body>
</html>
