{{ 'section-unshakable-roots.css' | asset_url | stylesheet_tag }}

<section
  id="section-{{ section.id }}"
  class="unshakable-roots color-{{ section.settings.color_scheme }} gradient"
>
  <div class="page-width">
    <div class="unshakable-roots__grid">
      <div class="unshakable-roots__info">
        <div class="unshakable-roots__logo-stack">
          {%- if section.settings.logo_image != blank -%}
            <div class="unshakable-roots__logo-image">
              {{ section.settings.logo_image | image_url: width: 360 | image_tag: loading: 'lazy', widths: '180, 240, 360, 540' }}
            </div>
          {%- else -%}
            <span class="unshakable-roots__logo-text">{{ section.settings.logo_text }}</span>
          {%- endif -%}
          {%- if section.settings.tagline != blank -%}
            <p class="unshakable-roots__tagline">{{ section.settings.tagline }}</p>
          {%- endif -%}
        </div>

        <div class="unshakable-roots__meta">
          {%- if section.settings.company_heading != blank -%}
            <p class="unshakable-roots__meta-label">{{ section.settings.company_heading }}</p>
          {%- endif -%}
          {%- if section.settings.company_info != blank -%}
            <div class="unshakable-roots__meta-body rte">{{ section.settings.company_info }}</div>
          {%- endif -%}
        </div>

        <div class="unshakable-roots__meta">
          {%- if section.settings.follow_heading != blank -%}
            <p class="unshakable-roots__meta-label">{{ section.settings.follow_heading }}</p>
          {%- endif -%}
          {%- if section.blocks.size > 0 -%}
            <ul class="unshakable-roots__social-list" role="list">
              {%- for block in section.blocks -%}
                <li class="unshakable-roots__social-item" {{ block.shopify_attributes }}>
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="unshakable-roots__social-link" target="_blank" rel="noreferrer">
                      {{- block.settings.label | escape -}}
                    </a>
                  {%- else -%}
                    <span class="unshakable-roots__social-link">{{ block.settings.label | escape }}</span>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>

      <div class="unshakable-roots__badge" aria-hidden="true">
        {%- if section.settings.badge_image != blank -%}
          {{ section.settings.badge_image | image_url: width: 900 | image_tag: loading: 'lazy', widths: '360, 540, 720, 900' }}
        {%- else -%}
          <svg viewBox="0 0 600 600" role="img" aria-label="{{ section.settings.badge_aria_label }}">
            <defs>
              <path id="top-arc-{{ section.id }}" d="M300,80 a220,220 0 1,1 0,440" />
              <path id="bottom-arc-{{ section.id }}" d="M300,520 a220,220 0 1,1 0,-440" />
            </defs>
            <text class="unshakable-roots__badge-text unshakable-roots__badge-text--top">
              <textPath xlink:href="#top-arc-{{ section.id }}" startOffset="15%">UNSHAKABLE ROOTS</textPath>
            </text>
            <text class="unshakable-roots__badge-text unshakable-roots__badge-text--bottom">
              <textPath xlink:href="#bottom-arc-{{ section.id }}" startOffset="65%">RESISTANCE</textPath>
            </text>
            <g class="unshakable-roots__badge-tree" transform="translate(300 300)">
              <path d="M-20,70 C-22,20 -22,-40 -18,-100 C-6,-82 6,-82 18,-100 C22,-40 22,20 20,70" />
              <path d="M-90,-40 C-90,-90 -40,-130 0,-130 C40,-130 90,-90 90,-40 C120,-70 130,-10 90,10 C70,60 -70,60 -90,10 C-130,-10 -120,-70 -90,-40" />
            </g>
            <text class="unshakable-roots__badge-script" x="130" y="320">مقاومة</text>
            <text class="unshakable-roots__badge-script" x="420" y="250">جذور</text>
            <text class="unshakable-roots__badge-sparkle" x="120" y="220">✦</text>
            <text class="unshakable-roots__badge-sparkle" x="450" y="360">✦</text>
          </svg>
        {%- endif -%}
      </div>
    </div>
  </div>

  {% schema %}
  {
    "name": "Unshakable roots",
  "presets": [
    {
      "name": "Unshakable roots"
    }
  ],
    "settings": [
      {
        "type": "select",
        "id": "color_scheme",
        "label": "Color scheme",
        "options": [
          { "value": "scheme-1", "label": "Scheme 1" },
          { "value": "scheme-2", "label": "Scheme 2" },
          { "value": "scheme-3", "label": "Scheme 3" }
        ],
        "default": "scheme-1"
      },
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Logo image"
      },
      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo text",
        "default": "BØRN<br>RZST"
      },
      {
        "type": "text",
        "id": "tagline",
        "label": "Tagline",
        "default": "Born of Resistance"
      },
      {
        "type": "text",
        "id": "company_heading",
        "label": "Company heading",
        "default": "Company Info"
      },
      {
        "type": "richtext",
        "id": "company_info",
        "label": "Company info",
        "default": "<p>BØRN RZST LLC<br/>Sheridan, Wyoming 82801<br/>USA<br/>info@bornrzst.com</p>"
      },
      {
        "type": "text",
        "id": "follow_heading",
        "label": "Follow heading",
        "default": "Follow the Movement"
      },
      {
        "type": "image_picker",
        "id": "badge_image",
        "label": "Badge image override"
      },
      {
        "type": "text",
        "id": "badge_aria_label",
        "label": "Badge description",
        "default": "Unshakable roots resistance emblem"
      }
    ]
  }
  {% endschema %}
</section>