{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'section-faq.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <h1>F.A.Q.</h1>
    <div class="faq-search-container">
      <input
        type="text"
        id="faq-search-{{ section.id }}"
        class="faq-search-input"
        placeholder="{{ section.settings.search_placeholder | escape }}"
        aria-label="{{ section.settings.search_placeholder | escape }}"
      >
    </div>

    <div class="faq-content-container" id="faq-content-{{ section.id }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'category' -%}
            <h2 class="faq-category-header" {{ block.shopify_attributes }}>
              {{ block.settings.title | escape }}
            </h2>
          {%- when 'question' -%}
            <div class="accordion" {{ block.shopify_attributes }}>
              <details>
                <summary>
                  <div class="summary__title">
                    <h3 class="accordion__title inline-richtext">
                      {{ block.settings.question | escape }}
                    </h3>
                  </div>
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </summary>
                <div class="accordion__content rte">
                  {{ block.settings.answer }}
                </div>
              </details>
            </div>
        {%- endcase -%}
      {%- endfor -%}
      <div class="faq-no-results">
        <p>{{ 'templates.search.no_results' | t: terms: '' }}</p>
      </div>
    </div>
  </div>
</div>

<script>
  function initFaqSearch{{ section.id | replace: '-', '_' }}() {
    const searchInput = document.getElementById('faq-search-{{ section.id }}');
    const container = document.getElementById('faq-content-{{ section.id }}');

    if (!searchInput || !container) return;

    searchInput.addEventListener('input', function(e) {
      const term = e.target.value.toLowerCase();
      const items = container.querySelectorAll('.accordion');
      const headers = container.querySelectorAll('.faq-category-header');
      let hasVisibleItems = false;

      // Filter questions
      items.forEach(item => {
        const question = item.querySelector('.accordion__title').textContent.toLowerCase();
        const answer = item.querySelector('.accordion__content').textContent.toLowerCase();

        if (question.includes(term) || answer.includes(term)) {
          item.classList.remove('faq-hidden');
          hasVisibleItems = true;
        } else {
          item.classList.add('faq-hidden');
        }
      });

      // Handle Category Headers
      // We iterate through headers and check if there are any visible siblings after them
      // until the next header or end of container.

      // Get all children of container to iterate in order
      const children = Array.from(container.children);

      let currentHeader = null;
      let visibleItemsSinceHeader = 0;

      children.forEach(child => {
        if (child.classList.contains('faq-category-header')) {
          // If we had a previous header and no visible items, hide it
          if (currentHeader && visibleItemsSinceHeader === 0) {
            currentHeader.classList.add('faq-hidden');
          } else if (currentHeader) {
            currentHeader.classList.remove('faq-hidden');
          }

          // Reset for new header
          currentHeader = child;
          visibleItemsSinceHeader = 0;
        } else if (child.classList.contains('accordion')) {
          if (!child.classList.contains('faq-hidden')) {
            visibleItemsSinceHeader++;
          }
        }
      });

      // Check the last header
      if (currentHeader) {
        if (visibleItemsSinceHeader === 0) {
          currentHeader.classList.add('faq-hidden');
        } else {
          currentHeader.classList.remove('faq-hidden');
        }
      }

      // Show/Hide "No Results" message
      const noResultsMsg = container.querySelector('.faq-no-results');
      if (noResultsMsg) {
        noResultsMsg.style.display = hasVisibleItems ? 'none' : 'block';
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initFaqSearch{{ section.id | replace: '-', '_' }});

  document.addEventListener('shopify:section:load', function(e) {
    if (e.target.querySelector('#faq-search-{{ section.id }}')) {
      initFaqSearch{{ section.id | replace: '-', '_' }}();
    }
  });
</script>

{% schema %}
{
  "name": "FAQ Content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder",
      "default": "Search for answers..."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Header",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name"
        }
      ]
    },
    {
      "type": "question",
      "name": "Q&A Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Frequently asked question?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Answer goes here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Content",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "question"
        }
      ]
    }
  ]
}
{% endschema %}
