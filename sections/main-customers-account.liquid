<section class="account account--dashboard">
  <div class="container account__inner">
    <header class="account__header">
      <h1 class="account__title">{{ 'customer.account.title' | t }}</h1>
      <a class="account__link" href="{{ routes.account_logout_url }}">{{ 'customer.account.logout' | t }}</a>
    </header>
    <div class="account__grid">
      <div class="account__details">
        <h2 class="account__subtitle">{{ 'customer.account.details' | t }}</h2>
        <p>{{ customer.default_address | format_address }}</p>
        <a class="account__link" href="{{ routes.account_addresses_url }}">{{ 'customer.account.manage_addresses' | t }}</a>
      </div>
      <div class="account__orders">
        <h2 class="account__subtitle">{{ 'customer.account.orders' | t }}</h2>
        {% if customer.orders_count > 0 %}
          <table class="account__table">
            <thead>
              <tr>
                <th scope="col">{{ 'customer.account.order_number' | t }}</th>
                <th scope="col">{{ 'customer.account.date' | t }}</th>
                <th scope="col">{{ 'customer.account.payment_status' | t }}</th>
                <th scope="col">{{ 'customer.account.fulfillment_status' | t }}</th>
                <th scope="col">{{ 'customer.account.total' | t }}</th>
              </tr>
            </thead>
            <tbody>
              {% for order in customer.orders %}
                <tr>
                  <td data-label="{{ 'customer.account.order_number' | t }}">
                    <a href="{{ order.customer_url }}">{{ order.name }}</a>
                  </td>
                  <td data-label="{{ 'customer.account.date' | t }}">{{ order.created_at | date: format: 'abbrev_date' }}</td>
                  <td data-label="{{ 'customer.account.payment_status' | t }}">{{ order.financial_status_label }}</td>
                  <td data-label="{{ 'customer.account.fulfillment_status' | t }}">{{ order.fulfillment_status_label }}</td>
                  <td data-label="{{ 'customer.account.total' | t }}">{{ order.total_price | money }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% else %}
          <p>{{ 'customer.account.no_orders' | t }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer account",
  "tag": "section",
  "class": "section-account",
  "settings": []
}
{% endschema %}
