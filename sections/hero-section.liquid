{{ 'section-hero-section.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign background_image = section.settings.background_image
  assign logo_image = section.settings.logo_image
  assign overlay_enabled = section.settings.enable_overlay
  assign overlay_opacity = section.settings.overlay_opacity | times: 0.01
  assign alignment = section.settings.text_alignment
  assign eyebrow = section.settings.eyebrow
  assign heading = section.settings.heading
  assign emphasis = section.settings.heading_emphasis
  assign body = section.settings.body
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link
  assign button_style_secondary = section.settings.button_style_secondary
  assign button_class = 'button button--primary'
  if button_style_secondary
    assign button_class = 'button button--secondary'
  endif
-%}

<section
  id="section-{{ section.id }}"
  class="hero-section color-{{ section.settings.color_scheme }} gradient"
  style="--hero-section-overlay: {%- if overlay_enabled -%}{{ overlay_opacity }}{%- else -%}0{%- endif -%}; padding-top: {{ section.settings.padding_top | default: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px;"
>
  <div
    class="hero-section__media"
    style="background-image: url({%- if background_image != blank -%}{{ background_image | image_url: width: 3840 }}{%- else -%}{{ 'hero.png' | asset_url }}{%- endif -%});"
    role="presentation"
    aria-hidden="true"
  ></div>
  <div class="hero-section__content-wrapper page-width">
    <div class="hero-section__content hero-section__content--{{ alignment }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="hero-section__logo">
        {%- if logo_image != blank -%}
          {{ logo_image | image_url: width: 500 | image_tag: loading: 'lazy', class: 'hero-section__logo-image' }}
        {%- else -%}
          <img src="{{ 'bornrzst-logo.png' | asset_url }}" alt="{{ 'general.accessibility.logo' | t }}" loading="lazy" width="150" height="200" />
        {%- endif -%}
      </div>
      {%- if eyebrow != blank -%}
        <span class="hero-section__eyebrow">{{ eyebrow }}</span>
      {%- endif -%}
      <h1 class="hero-section__heading">
        {%- if heading != blank -%}
          <span>{{ heading }}</span>
        {%- endif -%}
        {%- if emphasis != blank -%}
          <span class="hero-section__emphasis">{{ emphasis }}</span>
        {%- endif -%}
      </h1>
      {%- if body != blank -%}
        <div class="hero-section__body rte">{{ body }}</div>
      {%- endif -%}
      {%- if button_label != blank -%}
        <div class="hero-section__actions">
          {%- if button_link != blank -%}
            <a class="{{ button_class }}" href="{{ button_link }}">{{ button_label }}</a>
          {%- else -%}
            <button class="{{ button_class }}" type="button" disabled>{{ button_label }}</button>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  {% schema %}
  {
    "name": "Custom hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Logo"
      },
      {
        "type": "text",
        "id": "eyebrow",
        "label": "Eyebrow text",
        "default": "Every act of care is resistance"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Resistance is not a choice. It's our"
      },
      {
        "type": "text",
        "id": "heading_emphasis",
        "label": "Heading emphasis",
        "default": "Heritage"
      },
      {
        "type": "richtext",
        "id": "body",
        "label": "Body text",
        "default": "<p>Every purchase funds humanitarian aid for Palestine.</p><p>Wear your convictions.</p><p>Become the voice of resistance.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Join the movement"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "checkbox",
        "id": "button_style_secondary",
        "label": "Use outline button style",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_overlay",
        "label": "Show gradient overlay",
        "default": true
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Overlay intensity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "default": 65
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Spacing above",
        "min": 0,
        "max": 80,
        "step": 4,
        "unit": "px",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Spacing below",
        "min": 0,
        "max": 80,
        "step": 4,
        "unit": "px",
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "Custom hero"
      }
    ]
  }
  {% endschema %}
</section>
