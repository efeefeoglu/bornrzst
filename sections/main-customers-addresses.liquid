<section class="account account--addresses">
  <div class="container account__inner">
    <header class="account__header">
      <h1 class="account__title">{{ 'customer.addresses.title' | t }}</h1>
      <a class="account__link" href="{{ routes.account_logout_url }}">{{ 'customer.account.logout' | t }}</a>
    </header>
    <p class="account__description">{{ 'customer.addresses.subtitle' | t }}</p>
    <a class="btn btn--light account__submit" href="{{ routes.account_addresses_url }}#AddAddress">{{ 'customer.addresses.add_new' | t }}</a>
    <div class="account__addresses">
      {% for address in customer.addresses %}
        <article class="account__address">
          <h2 class="account__subtitle">{{ address.first_name }} {{ address.last_name }}</h2>
          <div class="account__address-body">{{ address | format_address }}</div>
          {% if address == customer.default_address %}
            <span class="account__badge">{{ 'customer.addresses.default' | t }}</span>
          {% endif %}
          <div class="account__address-actions">
            <a class="account__link" href="{{ routes.account_addresses_url }}#EditAddress_{{ address.id }}">{{ 'customer.addresses.edit' | t }}</a>
            <form method="post" action="{{ routes.account_addresses_url }}/{{ address.id }}" class="account__delete-form">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class="account__link account__link--danger" onclick="return confirm('{{ 'customer.addresses.delete_confirm' | t }}');">{{ 'customer.addresses.delete' | t }}</button>
            </form>
          </div>
        </article>
      {% else %}
        <p>{{ 'customer.addresses.empty' | t }}</p>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer addresses",
  "tag": "section",
  "class": "section-account",
  "settings": []
}
{% endschema %}
