{{ 'section-how-we-fund-impact.css' | asset_url | stylesheet_tag }}

<div class="how-we-fund-impact-section page-width">
  <h2 class="how-we-fund-impact-title">{{ section.settings.title }}</h2>
  <div class="how-we-fund-impact-container">
    <div class="how-we-fund-impact-column">
      <h3 class="how-we-fund-impact-subtitle">{{ section.settings.left_column_title }}</h3>
      <div class="how-we-fund-impact-text">{{ section.settings.left_column_text }}</div>
    </div>
    <div class="how-we-fund-impact-column">
      <h3 class="how-we-fund-impact-subtitle">{{ section.settings.right_column_title }}</h3>
      <div class="how-we-fund-impact-text">{{ section.settings.right_column_text }}</div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "How We Fund",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "How we fund impact & growth"
    },
    {
      "type": "text",
      "id": "left_column_title",
      "label": "Left Column Title",
      "default": "IMPACT ENGINE"
    },
    {
      "type": "richtext",
      "id": "left_column_text",
      "label": "Left Column Text",
      "default": "<p>100% OF DROP PROFITS = HUMANITARIAN RELIEF</p><p>SHOP SALES<br>↓<br>VERIFIED DONATION FUNDS<br>↓</p><ul><li>All Donations are: Verified, tracked, and released as aid in Gaza.</li><li>Transparency Guarantee: Public ledger of all funds.</li><li>Advocacy & Awareness: Campaigns amplifying Palestinian voices.</li></ul>"
    },
    {
      "type": "text",
      "id": "right_column_title",
      "label": "Right Column Title",
      "default": "Growth Engine"
    },
    {
      "type": "richtext",
      "id": "right_column_text",
      "label": "Right Column Text",
      "default": "<p>Creative Commerce → Sustainable Operations</p><p>We build movements not by emptying our pockets but by filling our hearts. We raise capital through separate revenue streams that fund the brand itself.</p><p>Our Growth Channels</p><ul><li>Membership: Exclusive club benefits & drops.</li><li>RZST Circle Memberships: Monthly supporters ($10-$250) who sustain operations.</li><li>External Funding: Grants, private investors, and strategic partnerships.</li></ul><p>Creative Sales → Operations & Team → Automation & Growth</p>"
    }
  ],
  "presets": [
    {
      "name": "How We Fund"
    }
  ]
}
{% endschema %}
