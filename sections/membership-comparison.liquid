{{ 'section-membership-comparison.css' | asset_url | stylesheet_tag }}

<div class="membership-comparison-section">
  <div class="page-width">
    <h1 class="membership-comparison-title">{{ section.settings.title }}</h1>
    <h3 class="membership-comparison-subtitle">{{ section.settings.subtitle1 }}</h3>
    <h3 class="membership-comparison-subtitle"><i></i>{{ section.settings.subtitle2 }}</i></h3>
    <div class="membership-comparison-table">
      <table>
        <thead>
          <tr>
            <th width="40%">{{ section.settings.header_benefit }}</th>
            <th>{{ section.settings.header_supporter }}</th>
            <th>{{ section.settings.header_builder }}</th>
            <th>{{ section.settings.header_guardian }}</th>
          </tr>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            <tr>
              <td>{{ block.settings.benefit }}</td>
              <td>{% if block.settings.supporter %}✓{% else %}-{% endif %}</td>
              <td>{% if block.settings.builder %}✓{% else %}-{% endif %}</td>
              <td>{% if block.settings.guardian %}✓{% else %}-{% endif %}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Membership Compare",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Compare Membership Benefits"
    },
    {
      "type": "text",
      "id": "subtitle1",
      "label": "Subtitle 1"
    },
    {
      "type": "text",
      "id": "subtitle2",
      "label": "Subtitle 2"
    },
    {
      "type": "text",
      "id": "header_benefit",
      "label": "Benefit Header",
      "default": "Benefit"
    },
    {
      "type": "text",
      "id": "header_supporter",
      "label": "Supporter Header",
      "default": "$10 Supporter"
    },
    {
      "type": "text",
      "id": "header_builder",
      "label": "Builder Header",
      "default": "$50 Builder"
    },
    {
      "type": "text",
      "id": "header_guardian",
      "label": "Guardian Header",
      "default": "$250 Guardian"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "benefit",
          "label": "Benefit"
        },
        {
          "type": "checkbox",
          "id": "supporter",
          "label": "Supporter",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "builder",
          "label": "Builder",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "guardian",
          "label": "Guardian",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Membership Compare",
      "category": "ADVANCED LAYOUT"
    }
  ]
}
{% endschema %}
