{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign has_social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign has_social_icons = false
  endif
-%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="bornrzst-footer page-width{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <div class="bornrzst-footer__top">
      <div class="bornrzst-footer__brand">
        {%- if section.settings.brand_logo_primary != blank -%}
          <p class="bornrzst-footer__brand-mark">{{ section.settings.brand_logo_primary }}</p>
        {%- endif -%}
        {%- if section.settings.brand_logo_secondary != blank -%}
          <p class="bornrzst-footer__brand-tagline">{{ section.settings.brand_logo_secondary }}</p>
        {%- endif -%}
        {%- if section.settings.brand_description != blank -%}
          <div class="bornrzst-footer__brand-description rte">{{ section.settings.brand_description }}</div>
        {%- endif -%}
      </div>

      <div class="bornrzst-footer__navigation">
        {%- if section.settings.about_menu != blank -%}
          <div class="bornrzst-footer__menu">
            {%- if section.settings.about_menu_heading != blank -%}
              <p class="bornrzst-footer__menu-title">{{ section.settings.about_menu_heading }}</p>
            {%- endif -%}
            <ul class="bornrzst-footer__menu-list" role="list">
              {%- for link in linklists[section.settings.about_menu].links -%}
                <li>
                  <a class="bornrzst-footer__menu-link" href="{{ link.url }}">{{ link.title | escape }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        {%- if section.settings.policies_menu != blank -%}
          <div class="bornrzst-footer__menu">
            {%- if section.settings.policies_menu_heading != blank -%}
              <p class="bornrzst-footer__menu-title">{{ section.settings.policies_menu_heading }}</p>
            {%- endif -%}
            <ul class="bornrzst-footer__menu-list" role="list">
              {%- for link in linklists[section.settings.policies_menu].links -%}
                <li>
                  <a class="bornrzst-footer__menu-link" href="{{ link.url }}">{{ link.title | escape }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="bornrzst-footer__badge">
          <div class="bornrzst-footer__badge-ring">
            {%- if section.settings.badge_image != blank -%}
              {{
                section.settings.badge_image
                | image_url: width: 320
                | image_tag:
                  loading: 'lazy',
                  width: section.settings.badge_image.width,
                  height: section.settings.badge_image.height,
                  class: 'bornrzst-footer__badge-image'
              }}
            {%- else -%}
              <img
                src="{{ 'olive-tree.png' | asset_url }}"
                alt="Unshakable Roots emblem"
                loading="lazy"
                width="160"
                height="160"
                class="bornrzst-footer__badge-image"
              >
            {%- endif -%}
          </div>
          <div class="bornrzst-footer__badge-text">
            {%- if section.settings.badge_title != blank -%}
              <p>{{ section.settings.badge_title }}</p>
            {%- endif -%}
            {%- if section.settings.badge_subtitle != blank -%}
              <p>{{ section.settings.badge_subtitle }}</p>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>

    {%- if section.settings.newsletter_enable or section.settings.show_social and has_social_icons -%}
      <div class="bornrzst-footer__middle">
        {%- if section.settings.newsletter_enable -%}
          <div class="bornrzst-footer__newsletter">
            {%- if section.settings.newsletter_heading != blank -%}
              <p class="bornrzst-footer__newsletter-heading">{{ section.settings.newsletter_heading }}</p>
            {%- endif -%}
            {%- if section.settings.newsletter_subheading != blank -%}
              <p class="bornrzst-footer__newsletter-subheading">{{ section.settings.newsletter_subheading }}</p>
            {%- endif -%}
            {%- form 'customer', id: 'ContactFooter', class: 'bornrzst-footer__newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="bornrzst-footer__newsletter-fields">
                <label class="visually-hidden" for="NewsletterForm--{{ section.id }}">{{ 'newsletter.label' | t }}</label>
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  value="{{ form.email }}"
                  class="bornrzst-footer__input"
                  autocomplete="email"
                  {% if form.errors %}
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <button
                  type="submit"
                  class="bornrzst-footer__submit"
                  name="commit"
                  aria-label="{{ section.settings.newsletter_button_label | default: 'Submit' }}"
                >
                  {{ section.settings.newsletter_button_label | default: 'Submit' }}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <p class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>
                  <span class="svg-wrapper">
                    {{- 'icon-success.svg' | inline_asset_content -}}
                  </span>
                  {{- 'newsletter.success' | t }}
                </p>
              {%- endif -%}
            {%- endform -%}
          </div>
        {%- endif -%}

        {%- if section.settings.show_social and has_social_icons -%}
          <div class="bornrzst-footer__social-icons">
            {%- render 'social-icons', class: 'bornrzst-footer__list-social' -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="bornrzst-footer__bottom">
      <div class="bornrzst-footer__impact">
        {%- if section.settings.impact_text != blank -%}
          <p>{{ section.settings.impact_text }}</p>
        {%- endif -%}
        {%- if section.settings.future_drops_text != blank -%}
          <p>{{ section.settings.future_drops_text }}</p>
        {%- endif -%}
      </div>
      <div class="bornrzst-footer__movement">
        {%- if section.settings.movement_caption != blank -%}
          <p>{{ section.settings.movement_caption }}</p>
        {%- endif -%}
        {%- if section.settings.social_handle != blank -%}
          <a class="bornrzst-footer__social-handle" href="{{ section.settings.social_handle_link | default: '#' }}">
            {{ section.settings.social_handle }}
          </a>
        {%- endif -%}
      </div>
    </div>

    <div class="bornrzst-footer__meta">
      <small>&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}</small>
      <small>{{ powered_by_link }}</small>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "t:sections.footer.settings.color_scheme.label"
    },
    {
      "type": "text",
      "id": "brand_logo_primary",
      "default": "BØRN RZST™",
      "label": "Primary wordmark"
    },
    {
      "type": "text",
      "id": "brand_logo_secondary",
      "default": "BØRN OF RESISTANCE",
      "label": "Tagline"
    },
    {
      "type": "richtext",
      "id": "brand_description",
      "default": "<p>BØRN RZST™ is a movement driven streetwear brand turning fashion into freedom. Every drop funds humanitarian aid, amplifies voices of resistance, and builds global solidarity.</p>",
      "label": "Brand description"
    },
    {
      "type": "text",
      "id": "about_menu_heading",
      "default": "About Us",
      "label": "About menu heading"
    },
    {
      "type": "link_list",
      "id": "about_menu",
      "label": "About menu"
    },
    {
      "type": "text",
      "id": "policies_menu_heading",
      "default": "Policies",
      "label": "Policies menu heading"
    },
    {
      "type": "link_list",
      "id": "policies_menu",
      "label": "Policies menu"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge image"
    },
    {
      "type": "text",
      "id": "badge_title",
      "default": "UNSHAKABLE ROOTS",
      "label": "Badge title"
    },
    {
      "type": "text",
      "id": "badge_subtitle",
      "default": "RESISTANCE",
      "label": "Badge subtitle"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "t:sections.footer.settings.newsletter_enable.label"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "default": "SIGN UP FOR OUR NEWSLETTER",
      "label": "Newsletter heading"
    },
    {
      "type": "text",
      "id": "newsletter_subheading",
      "default": "Drop announcements, exclusive capsules, and movement updates straight to your inbox.",
      "label": "Newsletter subheading"
    },
    {
      "type": "text",
      "id": "newsletter_button_label",
      "default": "Submit",
      "label": "Newsletter button label"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show social icons"
    },
    {
      "type": "text",
      "id": "impact_text",
      "default": "100% of Drop() → [Gaza Aid]",
      "label": "Impact text"
    },
    {
      "type": "text",
      "id": "future_drops_text",
      "default": "50% of Future Drops → [Humanitarian Organizations]",
      "label": "Future drops text"
    },
    {
      "type": "text",
      "id": "movement_caption",
      "default": "Follow the Movement",
      "label": "Movement caption"
    },
    {
      "type": "text",
      "id": "social_handle",
      "default": "@BORNRZST",
      "label": "Social handle"
    },
    {
      "type": "url",
      "id": "social_handle_link",
      "label": "Social handle link"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.padding_bottom.label",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.footer.name"
    }
  ]
}
{% endschema %}
