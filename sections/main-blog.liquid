{% paginate blog.articles by 12 %}
  <section class="blog">
    <div class="container blog__inner">
      <header class="blog__header">
        <h1 class="blog__title">{{ blog.title | escape }}</h1>
        {% if blog.description != blank %}
          <div class="blog__description rte">
            {{ blog.description }}
          </div>
        {% endif %}
      </header>
      {% if blog.articles_count > 0 %}
        <div class="blog__grid">
          {% for article in blog.articles %}
            <article class="blog-card">
              <a class="blog-card__link" href="{{ article.url }}">
                {% if article.image %}
                  <div class="blog-card__media">
                    {{ article.image | image_url: width: 900 | image_tag: loading: 'lazy', class: 'blog-card__image' }}
                  </div>
                {% endif %}
                <div class="blog-card__content">
                  <h2 class="blog-card__title">{{ article.title | escape }}</h2>
                  <p class="blog-card__meta">{{ article.published_at | date: format: 'abbrev_date' }}</p>
                  <p class="blog-card__excerpt">{{ article.excerpt_or_content | strip_html | truncate: 160 }}</p>
                </div>
              </a>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <p class="blog__empty">{{ 'blog.general.empty' | t }}</p>
      {% endif %}
      {% if paginate.pages > 1 %}
        <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
          <ul class="pagination__list" role="list">
            <li class="pagination__item">
              {% if paginate.previous %}
                <a class="pagination__link" href="{{ paginate.previous.url }}">{{ 'general.pagination.previous' | t }}</a>
              {% endif %}
            </li>
            {% for part in paginate.parts %}
              <li class="pagination__item">
                {% if part.is_link %}
                  <a class="pagination__link" href="{{ part.url }}">{{ part.title }}</a>
                {% elsif part.title == paginate.current_page %}
                  <span class="pagination__link pagination__link--current">{{ part.title }}</span>
                {% else %}
                  <span class="pagination__link">{{ part.title }}</span>
                {% endif %}
              </li>
            {% endfor %}
            <li class="pagination__item">
              {% if paginate.next %}
                <a class="pagination__link" href="{{ paginate.next.url }}">{{ 'general.pagination.next' | t }}</a>
              {% endif %}
            </li>
          </ul>
        </nav>
      {% endif %}
    </div>
  </section>
{% endpaginate %}

{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "class": "section-blog",
  "settings": []
}
{% endschema %}
