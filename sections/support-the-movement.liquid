{{ 'section-support-the-movement.css' | asset_url | stylesheet_tag }}

<div class="support-the-movement-section">
  <div class="page-width">
    <h2 class="support-the-movement-title">{{ section.settings.title }}</h2>
    <h3 class="support-the-movement-subtitle">{{ section.settings.subtitle }}</h3>
    <div class="support-the-movement-tiers">
      <div class="tier">
        <h4>{{ section.settings.tier_1_price }}</h4>
        <h4>{{ section.settings.tier_1_title }}</h4>
        <p>{{ section.settings.tier_1_description }}</p>
        <a href="{{ section.settings.tier_1_url }}" class="btn">{{ section.settings.button_text }}</a>
      </div>
      <div class="tier">
        <h4>{{ section.settings.tier_2_price }}</h4>
        <h5>{{ section.settings.tier_2_title }}</h5>
        <p>{{ section.settings.tier_2_description }}</p>
        <a href="{{ section.settings.tier_2_url }}" class="btn">{{ section.settings.button_text }}</a>
      </div>
      <div class="tier">
        <h4>{{ section.settings.tier_3_price }}</h4>
        <h5>{{ section.settings.tier_3_title }}</h5>
        <p>{{ section.settings.tier_3_description }}</p>
        <a href="{{ section.settings.tier_3_url }}" class="btn">{{ section.settings.button_text }}</a>
      </div>
    </div>
    <p class="support-the-movement-footer">{{ section.settings.footer_text }}</p>
  </div>
</div>

