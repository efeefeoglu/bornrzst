{{ 'section-impact-breakdown.css' | asset_url | stylesheet_tag }}

<div class="impact-breakdown-section animate-in-scroll-trigger">
  <div class="page-width">
    <h2 class="impact-breakdown-title animate-item animate-item-0">{{ section.settings.title }}</h2>
    <h3 class="impact-breakdown-subtitle animate-item animate-item-1">{{ section.settings.subtitle }}</h3>
    <div class="impact-breakdown-text animate-item animate-item-2">{{ section.settings.text }}</div>
    <div class="impact-breakdown-buttons animate-item animate-item-3">
      <a href="{{ section.settings.button_1_link }}" class="button button--pulse">{{ section.settings.button_1_label }}</a>
      <a href="{{ section.settings.button_2_link }}" class="button button--pulse">{{ section.settings.button_2_label }}</a>
    </div>
    <div class="impact-breakdown-container page-width">
      {% for block in section.blocks %}
        <div class="impact-breakdown-item animate-item animate-item-{{ 3 | plus: forloop.index }}">
          <h3 class="impact-breakdown-item-title">{{ block.settings.title }}</h3>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Impact Breakdown",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Impact Breakdown"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_1_label",
      "label": "Button 1 Label"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_2_label",
      "label": "Button 2 Label"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "01. MEDICAL SUPPLIES"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Impact Breakdown",
      "category": "ADVANCED LAYOUT",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
