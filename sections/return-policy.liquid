{% schema %}
{
  "name": "Return Policy",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "BØRN RZST™ – RETURNS & EXCHANGES POLICY"
    },
    {
      "type": "text",
      "id": "effective_date",
      "label": "Effective Date Text",
      "default": "Effective Date: September 2025"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "BØRN RZST™ - THE UNIFORM OF GLOBAL RESISTANCE · © BØRN RZST™ 2025"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F3F0E6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color (Red)",
      "default": "#c30100"
    }
  ],
  "blocks": [
    {
      "type": "policy_item",
      "name": "Policy Item",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading",
          "default": "1. OVERVIEW"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Content goes here...</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Return Policy Page"
    }
  ]
}
{% endschema %}

{% style %}
  .section-return-policy-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 6rem 2rem;
  }

  .return-policy-container {
    max-width: 1200px;
    margin: 0 auto;
    font-family: var(--font-body-family);
  }

  .return-policy-header {
    margin-bottom: 6rem;
  }

  .return-policy-title {
    font-family: var(--font-heading-family);
    color: {{ section.settings.accent_color }};
    font-size: 4rem;
    line-height: 1.1;
    text-transform: uppercase;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .return-policy-date {
    font-size: 1.4rem;
    color: {{ section.settings.text_color }};
  }

  .return-policy-grid {
    display: flex;
    flex-direction: column;
    border-top: 1px solid rgba(0,0,0,0.1);
  }

  .policy-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding: 3rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }

  @media screen and (min-width: 768px) {
    .policy-row {
      grid-template-columns: 1fr 2fr;
      gap: 4rem;
    }
  }

  .policy-heading {
    font-family: var(--font-heading-family);
    font-size: 1.8rem;
    font-weight: 700;
    text-transform: uppercase;
    margin: 0;
    color: {{ section.settings.text_color }};
  }

  .policy-content {
    font-size: 1.5rem;
    line-height: 1.6;
  }

  .policy-content p {
    margin-bottom: 1rem;
  }

  .policy-content ul {
    list-style: none; /* Removing default bullets as per image style usually implies clean text or specific markers, but image shows bullets. */
    padding-left: 0;
    margin: 0;
  }

  .policy-content li {
     position: relative;
     padding-left: 1.5rem;
     margin-bottom: 0.5rem;
  }

  .policy-content li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: {{ section.settings.text_color }};
  }

  .return-policy-footer {
    margin-top: 6rem;
    padding-top: 2rem;
    font-family: var(--font-heading-family);
    color: {{ section.settings.accent_color }};
    font-size: 1.8rem;
    text-transform: uppercase;
    font-weight: 700;
  }

  /* Link styling within content */
  .policy-content a {
    color: {{ section.settings.text_color }};
    text-decoration: underline;
    font-weight: 700;
  }

{% endstyle %}

<div class="section-return-policy-{{ section.id }}">
  <div class="return-policy-container">
    <div class="return-policy-header">
      <h1 class="return-policy-title">{{ section.settings.title }}</h1>
      {% if section.settings.effective_date != blank %}
        <div class="return-policy-date">{{ section.settings.effective_date }}</div>
      {% endif %}
    </div>

    <div class="return-policy-grid">
      {% for block in section.blocks %}
        <div class="policy-row" {{ block.shopify_attributes }}>
          <div class="policy-heading-col">
            <h2 class="policy-heading">{{ block.settings.heading }}</h2>
          </div>
          <div class="policy-content-col">
            <div class="policy-content">
              {{ block.settings.content }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.footer_text != blank %}
      <div class="return-policy-footer">
        {{ section.settings.footer_text }}
      </div>
    {% endif %}
  </div>
</div>
