{%- style -%}
  #roots-story-{{ section.id }} .roots-story__padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #roots-story-{{ section.id }} .roots-story__padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #roots-story-{{ section.id }} .roots-story__layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 900px) {
    #roots-story-{{ section.id }} .roots-story__layout {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 3rem;
    }
  }

  #roots-story-{{ section.id }} .roots-story__media {
    display: flex;
    justify-content: center;
  }

  #roots-story-{{ section.id }} .roots-story__media img,
  #roots-story-{{ section.id }} .roots-story__media svg {
    max-width: 420px;
    width: 100%;
    height: auto;
  }

  #roots-story-{{ section.id }} .roots-story__content {
    max-width: 620px;
  }

  #roots-story-{{ section.id }} .roots-story__heading {
    font-family: 'Noto Serif Display Extra Condensed', var(--font-heading-family);
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
  }

  #roots-story-{{ section.id }} .roots-story__heading::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -0.35em;
    width: 0;
    height: 3px;
    background-color: currentColor;
    transition: width 400ms ease;
  }

  #roots-story-{{ section.id }} .roots-story__heading.reveal-visible::after {
    width: 100%;
  }

  #roots-story-{{ section.id }} .roots-story__text {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  @keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-in {
  animation: fadeInUp 10s ease-out forwards;
}

  @media (prefers-reduced-motion: reduce) {
    #roots-story-{{ section.id }} .roots-story__heading::after {
      width: 100%;
    }
  }
{%- endstyle -%}

<section id="roots-story-{{ section.id }}" class="scroll-trigger roots-story-section color-{{ section.settings.color_scheme }} gradient">
  <div class="roots-story__padding">
    <div class="page-width roots-story__layout">
      <div class="roots-story__media animate-item" data-reveal-item>
        {%- if section.settings.tree_image != blank -%}
          {%- liquid
            assign alt_text = section.settings.tree_image.alt | default: section.settings.heading | strip_html
          -%}
          {{
            section.settings.tree_image
            | image_url: width: 800
            | image_tag: loading: 'lazy', widths: '360, 480, 600, 720, 800, 1200', alt: alt_text
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="roots-story__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="roots-story__heading animate-item" data-reveal-item>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.body != blank -%}
          <div class="roots-story__text rte animate-item" data-reveal-item>
            {{ section.settings.body }}
          </div>
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <a
            class="button button--primary animate-item"
            data-reveal-item
            {% if section.settings.button_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link }}"
            {% endif %}
          >
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{%- javascript -%}
  (() => {
    
// Configuration
const TARGET_ELEMENT_SELECTOR = '.scroll-trigger'; // The parent element to watch
const SUBELEMENT_CLASS = 'animate-item'; // Class of subelements to animate
const ANIMATION_CLASS = 'animate-in'; // Class that applies the animation
const THRESHOLD = 0.2; // How much of the element should be visible (0-1)

// Create Intersection Observer
const observer = new IntersectionObserver((entries) => {
  entries.forEach((entry) => {
    if (entry.isIntersecting) {
      // Find all subelements with the specific class
      const subelements = entry.target.querySelectorAll(`.${SUBELEMENT_CLASS}`);
      
      // Add animation class to each subelement with a stagger delay
      subelements.forEach((el, index) => {
        setTimeout(() => {
          el.classList.add(ANIMATION_CLASS);
        }, index * 100); // 100ms delay between each element
      });
      
      // Stop observing this element (animation only happens once)
      observer.unobserve(entry.target);
    }
  });
}, {
  threshold: THRESHOLD,
  rootMargin: '0px'
});

// Observe all target elements
document.querySelectorAll(TARGET_ELEMENT_SELECTOR).forEach((el) => {
  observer.observe(el);
});
  })();
{%- endjavascript -%}

{% schema %}
{
  "name": "Roots story",
  "tag": "section",
  "class": "section roots-story",
  "settings": [
    {
      "type": "image_picker",
      "id": "tree_image",
      "label": "Tree image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Roots Run Deep"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>Born from generations of struggle and resilience, BØRN RZST™ carries the heritage of those who never gave up.</p><p>Like the olive tree, we stand unshaken rooted in history, reaching for freedom.</p><p>Every design tells a story of resistance, hope, and unwavering strength.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "EXPLORE OUR STORY"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Roots story"
    }
  ]
}
{% endschema %}