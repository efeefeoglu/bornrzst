{%- style -%}
  #roots-story-{{ section.id }} .roots-story__padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #roots-story-{{ section.id }} .roots-story__padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #roots-story-{{ section.id }} .roots-story__layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 900px) {
    #roots-story-{{ section.id }} .roots-story__layout {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 3rem;
    }
  }

  #roots-story-{{ section.id }} .roots-story__media {
    display: flex;
    justify-content: center;
  }

  #roots-story-{{ section.id }} .roots-story__media img,
  #roots-story-{{ section.id }} .roots-story__media svg {
    max-width: 420px;
    width: 100%;
    height: auto;
  }

  #roots-story-{{ section.id }} .roots-story__content {
    max-width: 620px;
  }

  #roots-story-{{ section.id }} .roots-story__heading {
    font-family: 'Noto Serif Display Extra Condensed', var(--font-heading-family);
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
  }

  #roots-story-{{ section.id }} .roots-story__heading::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -0.35em;
    width: 0;
    height: 3px;
    background-color: currentColor;
    transition: width 400ms ease;
  }

  #roots-story-{{ section.id }} .roots-story__heading.is-visible::after {
    width: 100%;
  }

  #roots-story-{{ section.id }} [data-reveal-item] {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 600ms ease, transform 600ms ease;
    transition-delay: var(--roots-story-delay, 0ms);
  }

  #roots-story-{{ section.id }} [data-reveal-item].is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  #roots-story-{{ section.id }} .roots-story__text {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  @media (prefers-reduced-motion: reduce) {
    #roots-story-{{ section.id }} [data-reveal-item] {
      transition: none;
      opacity: 1;
      transform: none;
    }
  }
{%- endstyle -%}

<section id="roots-story-{{ section.id }}" class="roots-story-section color-{{ section.settings.color_scheme }} gradient">
  <div class="roots-story__padding">
    <div class="page-width roots-story__layout">
      <div class="roots-story__media" data-reveal-item>
        {%- if section.settings.tree_image != blank -%}
          {%- liquid
            assign alt_text = section.settings.tree_image.alt | default: section.settings.heading | strip_html
          -%}
          {{
            section.settings.tree_image
            | image_url: width: 800
            | image_tag: loading: 'lazy', widths: '360, 480, 600, 720, 800, 1200', alt: alt_text
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="roots-story__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="roots-story__heading" data-reveal-item>
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.body != blank -%}
          <div class="roots-story__text rte" data-reveal-item>
            {{ section.settings.body }}
          </div>
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <a
            class="button button--primary"
            data-reveal-item
            {% if section.settings.button_link == blank %}
              role="link" aria-disabled="true"
            {% else %}
              href="{{ section.settings.button_link }}"
            {% endif %}
          >
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{%- javascript -%}
  (() => {
    const sectionId = 'roots-story-{{ section.id }}';
    const init = () => {
      const sectionEl = document.getElementById(sectionId);
      if (!sectionEl) return;
      const revealItems = sectionEl.querySelectorAll('[data-reveal-item]');
      if (!revealItems.length) return;

      revealItems.forEach((item, index) => {
        item.style.setProperty('--roots-story-delay', `${index * 80}ms`);
      });

      const showItems = () => {
        revealItems.forEach((item) => item.classList.add('is-visible'));
      };

      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const isDesignMode = Boolean(window.Shopify && Shopify.designMode);

      if (prefersReducedMotion || isDesignMode) {
        showItems();
        return;
      }

      if (sectionEl.dataset.revealInitialized === 'true') return;
      sectionEl.dataset.revealInitialized = 'true';

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (!entry.isIntersecting) return;
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          });
        },
        {
          rootMargin: '0px 0px -15% 0px',
          threshold: 0.15
        }
      );

      revealItems.forEach((item) => observer.observe(item));
    };

    const onSectionLoad = (event) => {
      if (event.target && event.target.id === sectionId) {
        init();
      }
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init, { once: true });
    } else {
      init();
    }

    document.addEventListener('shopify:section:load', onSectionLoad);
    document.addEventListener('shopify:section:unload', (event) => {
      if (event.target && event.target.id === sectionId) {
        document.removeEventListener('shopify:section:load', onSectionLoad);
      }
    });
  })();
{%- endjavascript -%}

{% schema %}
{
  "name": "Roots story",
  "tag": "section",
  "class": "section roots-story",
  "settings": [
    {
      "type": "image_picker",
      "id": "tree_image",
      "label": "Tree image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Roots Run Deep"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>Born from generations of struggle and resilience, BØRN RZST™ carries the heritage of those who never gave up.</p><p>Like the olive tree, we stand unshaken rooted in history, reaching for freedom.</p><p>Every design tells a story of resistance, hope, and unwavering strength.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "EXPLORE OUR STORY"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Roots story"
    }
  ]
}
{% endschema %}
